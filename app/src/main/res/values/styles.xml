<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundTheme</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorTextFieldText</item>
        <item name="colorControlHighlight">@color/colorTextFieldText</item>
        <item name="android:colorBackground">@color/colorBackgroundMain</item>
    </style>

    <style name="SignupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundTheme</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorTextFieldText</item>
        <item name="android:textColorPrimary">@color/colorTextWhite</item>
        <item name="android:colorBackground">@color/colorBackgroundMain</item>
    </style>

    <style name="ToolbarAndTabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundTheme</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--CUSTOM FOR RIPPLE DIALOG FRAGMENT-->
    <style name="colorControlHighlight_bla" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorTextFieldText</item>
    </style>

</resources>
